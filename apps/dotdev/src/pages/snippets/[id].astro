---
import { getCollection, render } from "astro:content";
import Column from "../../layouts/Column.astro";
import PostTitle from "../../components/PostTitle.astro";

export async function getStaticPaths() {
  const posts = await getCollection("snippets");
  return posts.map((p) => ({ params: { id: p.id }, props: { post: p } }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<Column routeTitle="Snippet">
  <PostTitle title={post.data.title} subtitle={post.data.subtitle} />
  <Content />
</Column>
