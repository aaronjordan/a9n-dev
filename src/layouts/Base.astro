---
import "@fontsource-variable/figtree";
import "@fontsource/google-sans-code/400.css";
import "@fontsource/google-sans-code/600.css";

import Header from "../components/Header.astro"
import "../styles/global.css";

interface Props {
  pageTitle?: string;
  routeTitle: string;
}

const { pageTitle, routeTitle } = Astro.props;
const siteTitle = "Aaron Jordan";

const title = [routeTitle, pageTitle, siteTitle].filter((x) => x).join(" - ");
---

<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col overflow-y-auto h-full">
    <Header />
    <slot />
  </body>
</html>
